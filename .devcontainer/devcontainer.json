{
    "name": "Sage WordPress Theme Development",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "sage.test",
    "remoteUser": "vscode",
    "workspaceFolder": "/app",
    "onCreateCommand": "sudo chmod +x ./theme/docker/scripts/install.sh && ./theme/docker/scripts/install.sh",
    "postCreateCommand": "sudo chmod +x ./theme/docker/scripts/redis-cache.sh && ./theme/docker/scripts/redis-cache.sh",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    }
}
