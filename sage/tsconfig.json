{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
		"jsx": "preserve",
        "esModuleInterop": true,
        "declaration": false,
        "target": "ESNext",
        "sourceMap": false,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@js/*": [
                "./resources/js/*"
            ],
            "@css/*": [
                "./resources/css/*"
            ]
        }
    },
    "exclude": ["node_modules", "public"]
}
  